<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<AnchorPane prefHeight="360" prefWidth="640" xmlns:fx="http://javafx.com/fxml"
            fx:controller="java_ebook_search.controller.FiltersController">
    <fx:define>
        <ToggleGroup fx:id="fields"/>
    </fx:define>

    <children>
        <GridPane AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
                  AnchorPane.topAnchor="10.0">
            <children>
                <GridPane GridPane.columnIndex="0" GridPane.rowIndex="0"
                        styleClass="grid">
                    <children>
                        <Text text="Books" id="filterHeading"
                               GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <Label text="Java in a Nutshell"
                               GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <Label text="Java Language Reference"
                               GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <Label text="Java AWT Reference"
                               GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <Label text="Java Fundamental Classes Reference"
                               GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <Label text="Exploring Java"
                               GridPane.columnIndex="0" GridPane.rowIndex="5"/>

                        <CheckBox GridPane.columnIndex="1"
                                  GridPane.rowIndex="1"
                                  fx:id="javanut"
                                  selected="true"/>
                        <CheckBox GridPane.columnIndex="1"
                                  GridPane.rowIndex="2"
                                  fx:id="langref"
                                  selected="true"/>
                        <CheckBox GridPane.columnIndex="1"
                                  GridPane.rowIndex="3"
                                  fx:id="awt"
                                  selected="true"/>
                        <CheckBox GridPane.columnIndex="1"
                                  GridPane.rowIndex="4"
                                  fx:id="fclass"
                                  selected="true"/>
                        <CheckBox GridPane.columnIndex="1"
                                  GridPane.rowIndex="5"
                                  fx:id="exp"
                                  selected="true"/>
                    </children>
                </GridPane>
                <VBox GridPane.columnIndex="1" GridPane.rowIndex="0"
                          styleClass="grid">
                    <children>
                        <Text text="Fields" id="filterHeading"/>
                        <RadioButton text="Title and Content"
                                     toggleGroup="$fields"
                                     fx:id="titleContent"/>
                        <RadioButton text="Title Only"
                                     toggleGroup="$fields"
                                     fx:id="title"/>
                        <RadioButton text="Content Only"
                                     toggleGroup="$fields"
                                     fx:id="content"/>
                    </children>
                </VBox>

            </children>
        </GridPane>
        <HBox id="HBox" alignment="CENTER" minWidth="-1.0" spacing="5.0"
              AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="10.0">
            <children>
                <Button onAction="#confirm" prefWidth="80.0" text="Confirm"/>
                <Button onAction="#cancel" prefWidth="80.0" text="Cancel"/>
            </children>
        </HBox>
    </children>

    <stylesheets>
        <URL value="@../style/filters.css"/>
    </stylesheets>
</AnchorPane>