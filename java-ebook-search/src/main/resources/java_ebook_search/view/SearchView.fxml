<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.web.WebView?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox fx:id="searchView"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="java_ebook_search.controller.SearchController">
    <children>
        <HBox>
            <TextField fx:id="query" HBox.hgrow="ALWAYS"
                       promptText="Search here..."/>
            <Button text="Search" onAction="#search"/>
            <Button text="Filters" onAction="#filters"/>
        </HBox>
        <SplitPane VBox.vgrow="ALWAYS" dividerPositions="0.25">
            <items>
                <ListView fx:id="results"/>
                <WebView fx:id="webView"/>
            </items>
        </SplitPane>
    </children>
</VBox>
